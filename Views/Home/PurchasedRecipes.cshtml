@model IEnumerable<RecipeBlogProject.Models.Recipepayment>
@{
    Layout = "~/views/shared/_PurchasedRecipesLayout.cshtml";
}


<div class="container" style="margin-top:10rem; margin-bottom:10rem" data-aos="fade-up">
    <div class="section-title p-0 text-start">
        <h2 class="text-start">Purchased Recipes</h2>
        <p>What You Had Bought</p>
    </div>
    <br />
    <table class="table table-dark table-striped table-hover table-sm">
        <thead class="table-dark">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Recipe.Receipename)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Totalamount)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CreatedDate)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Recipe.Receipename)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Totalamount)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CreatedDate)
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
