<!doctype html>
<html lang="en">
<head>
	<title>Login Page</title>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

	<link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">

	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

	<link rel="stylesheet" href="~/Login-Register/login-assets/css/style.css">

</head>
<body style="background-color:#ffd9b0;">
	<section class="ftco-section">
		<div class="container">
			<div class="row justify-content-center">
				<div class="col-md-12 col-lg-10">
					<div class="wrap d-md-flex">
						<img class="img" src="~/Login-Register/login-assets/images/bg-1.jpg">
						</img>
						<div class="login-wrap p-4 p-md-5">
							<div class="d-flex">
								<div class="w-100">
									<h3 class="mb-4">Sign In</h3>
								</div>
							</div>
    <div>
        @RenderBody()
    </div>
							<p class="text-center">Not a member? <a asp-controller="Register" asp-action="Register_Index">Sign Up</a></p>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>

	<script src="~/Login-Register/login-assets/js/jquery.min.js"></script>
	<script src="~/Login-Register/login-assets/js/popper.js"></script>
	<script src="~/Login-Register/login-assets/js/bootstrap.min.js"></script>
	<script src="~/Login-Register/login-assets/js/main.js"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>

